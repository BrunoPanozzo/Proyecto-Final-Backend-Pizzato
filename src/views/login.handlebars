<div class="container">
    <form action="/api/sessions/login" method="post" enctype="application/x-www-form-urlencoded">
        <div class="mt-3 mb-3 row" class="col-12">
            <label class="form-label col-auto" for="_email">Email:</label>
            <input class="form-control col" type="email" name="email" id="_email" />
        </div>
        <div class="mb-3 row" class="col-12">
            <label class="form-label col-auto" for="_pass">Password:</label>
            <input class="form-control col" type="password" name="password" id="_pass" />
        </div>
         <div class="mb-3 row" class="col-12">
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </div>
    </form>
    <div class="container">
        <div class="row">          
            <div class="col-12">
                <div class="d-flex gap-2">
                    <a href="/forget_password" class="btn btn-primary flex-fill">Olvidó su contraseña?</a>
                    <a href="/api/sessions/github" class="btn btn-primary flex-fill">Entrar con Github</a>
                    <a href="/" class="btn btn-primary flex-fill">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>