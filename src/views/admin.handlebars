<h1 class="text-center">Lista de Usuarios</h1>
<div class="divEncabezado">
  <div class="container">
    <div class="user-session">
      <p class="p-1 mt-1 mb-1">Bienvenido,
        <strong>Administrador Coder</strong>
        !!!</p>     
    <div class="container">
      <a href="/api/sessions/logout">
        <button type="submit" class="btn btn-primary mb-3">Logout</button>
      </a>      
      <button onclick="history.back()" class="btn btn-primary mb-3">Volver</button>      
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <table class="table table-bordered mt-4 text-center">
        <thead>
          <tr class="justify-content-center">
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>  
            <th>Ultima conexion</th>
            <th>Modificar Rol</th>
            <th>Eliminar Usuario</th>            
          </tr>
        </thead>
        <tbody>
          {{#each docs}}
            <tr class="justify-content-center">
              <td>{{this.first_name}}</td>
              <td>{{this.last_name}}</td>
              <td>{{this.email}}</td>
              <td>{{this.rol}}</td>             
                <td>{{this.last_connection}}</td>
                <td>
                  <form user-id="{{this._id}}">
                    <button
                      class="modificar-rol-usuario btn btn-secondary"
                    >Modificar</button>
                  </form>
                </td>
                <td>
                  <form user-id="{{this._id}}">
                    <button class="eliminar-usuario btn btn-danger">Eliminar</button>
                  </form>
                </td>             
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<form class="text-center">
    <button
      class="eliminar-usuarios-inactivos btn btn-primary text-decoration text-center"
    >Borrar Usuarios sin Actividad</button>
</form>
<script src="/js/deleteUser.js"></script>
<script src="/js/deleteInactiveUsers.js"></script>
<script src="/js/changeRol.js"></script>